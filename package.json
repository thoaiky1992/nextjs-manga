{
  "name": "manga-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t frontend .",
    "docker:run": "docker container run -d --name frontend-manga -v \"$(pwd)\"/public:/user/src/app/public --restart on-failure -it -p 3000:3000 --network=app-network frontend",
    "docker:remove": "docker container rm frontend-manga",
    "docker:stop": "docker container stop frontend-manga",
    "docker:start": "docker container start frontend-manga",
    "docker:restart": "docker container restart frontend-manga",
    "docker:deploy": "yarn docker:build && yarn docker:stop || true && yarn docker:remove || true && yarn docker:run"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.4.0",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0",
    "next": "12.2.0",
    "nextjs-progressbar": "^0.0.14",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-select": "^5.4.0",
    "swiper": "^8.2.6",
    "swr": "^1.3.0",
    "usehooks-ts": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "autoprefixer": "^10.4.7",
    "eslint": "8.19.0",
    "eslint-config-next": "12.2.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4",
    "typescript": "4.7.4"
  }
}
